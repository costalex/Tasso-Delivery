        <div class="alert alert-info"><%= message %></div>
        <% } %>
        <a href="./registration"><button class="btn red_button" type="button" name="button">Inscription</button></a>
      </div>

      <section class="container-fluid secteur villes"> <!-- SECTEUR START -->
        <h3>Secteurs desservis par Tasso à <span>Bordeaux</span></h3>
        <div class="row">
          <div class="col-xs-12 col-sm-6 map-bordeaux">
            <img src="../img/showcase/maps-bordeaux.png" alt="Bordeaux, ville desservie par Tasso">
          </div>
          <div class="col-xs-12 col-sm-6 desserte-bordeaux">
