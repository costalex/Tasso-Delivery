<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Génération facture</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"/>
  <link rel="stylesheet" href="{{css}}" />
</head>
<body>
  <div class="container-fluid" style="max-width: 800px; padding-top: 20px;">
    <div class="row">
      <div class="col-xs-5 col-sm-5" align="left">
        <img src="{{Logo}}" width="150px" height="50px"/>
      </br></br>
      <p style="font-size: 15px; color: #9B98A3; font-style: italic">
        1 rue Jean-Francois de Laperouse</br>
        33290 Blanquefort</br>
        France</br>
      </p>
    </div>
    <div id="num_facture"  class="col-xs-2 col-sm-2 panel panel-default" style="border-color: #D8D8D8;padding: 0px; margin-right: 10px; border-radius: 5px;">
      <table class="table table-bordered table-striped" align="center">
        <thead>
          <tr style="font-size: 12px;">
            <th style="padding: 5px; border-bottom-width: 1px;">Facture No </th>
          </tr>
        </thead>
        <tbody>
          <tr style="font-size: 12px;">
            <td style="padding: 5px; "><%= data.refacture %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div id="date_facture" class="col-xs-2 col-sm-2 panel panel-default" style="border-color: #D8D8D8;padding: 0px; margin-right: 10px; border-radius: 5px;">
      <table class="table table-bordered table-striped">
        <thead>
          <tr style="font-size: 12px;">
            <th style="padding: 5px; border-bottom-width: 1px;">Date</th>
          </tr>
        </thead>
        <tbody>
          <tr style="font-size: 12px;">
            <td style="padding: 5px;"><%= data.date.day %>/<%= data.date.month %>/<%= data.date.year %></td>
          </tr>
        </tbody>
      </table>
    </div>

    <div id="destinataire" class="col-xs-6 col-sm-6" style="margin-top: 25px; margin-bottom: 25px;">
      <p style="font-size: 13px;">
        Destinataire :</br>
        <%= data.details.firstname %> <%= data.details.lastname %></br>
        <%= data.details.address %></br>
        <%= data.details.phone %></br>
        <%= data.details.email %></br>
      </p>
    </div>

    <div class="table-responsive col-xs-12 col-sm-12 panel panel-default" style="padding: 0px; margin-right: 10px; border-radius: 5px;">
      <table class="table table-bordered table-striped">
        <thead style="background-color: #eeebeb ; border-bottom: 1px solid #eeebeb ;">
          <tr style="font-size:12px; text-align: center;">
            <th style="padding: 5px; border-bottom-width: 1px;" >Désignation</th>
            <th style="padding: 5px; border-bottom-width: 1px;">Quantité</th>
            <th style="padding: 5px; border-bottom-width: 1px;">P.U HT</th>
            <th style="padding: 5px; border-bottom-width: 1px;">Prix HT</th>
          </tr>
        </thead>
        <tbody>
          <tr style="font-size: 12px;">
            <td style="text-align: left; padding: 5px; border-top: none; border-bottom: none;"><%= data.designation %></td>
            <td style="text-align: left; padding: 5px; border-top: none; border-bottom: none;"><%= data.Quantite %></td>
            <td style="text-align: left; padding: 5px; border-top: none; border-bottom: none;"><p id="PuHt"></p></td>
            <td style="text-align: left; padding: 5px; border-top: none; border-bottom: none;"><p id="Montantht"></p></td>
          </tr>
          <tr style="font-size: 12px; height: 120px; ">
            <td style="text-align: left; padding: 5px; border-top: none; border-bottom: none;"><%= data.Secure_designation %></td>
            <td style="text-align: left; padding: 5px; border-top: none; border-bottom: none;"><%= data.Secure_Quantite %></td>
            <td style="text-align: left; padding: 5px; border-top: none; border-bottom: none;"><p id="Secure_PuHtvar"></p></td>
            <td style="text-align: left; padding: 5px; border-top: none; border-bottom: none;"><p id="Secure_Montanthtvar"></p></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="table-responsive col-xs-6 col-sm-6 panel panel-default" style="border-color: #D8D8D8;float:right; margin-right: 0px; padding: 0px; margin-right: 10px; border-radius: 5px;">
      <table id="recap_table" class="table table-striped">
        <tbody>
          <tr>
            <th style="text-align: left; font-size: 12px; padding: 5px;">Total HT</th>
            <td style="width:auto; text-align: right; font-size: 12px;padding: 5px;"><p id="TotalHt"></p></td>
          </tr>
          <tr>
            <th style="text-align: left; font-size: 12px; padding: 5px;">Remise HT</th>
            <td style="text-align: right; font-size: 12px; padding: 5px;"><p id="remiseHt"></p></td>
          </tr>
          <tr>
            <th style="text-align: left; font-size: 12px; padding: 5px;">Net HT</th>
            <td style="text-align: right; font-size: 12px; padding: 5px;"><p id="NetHt"></p></td>
          </tr>
          <tr>
            <th style="text-align: left; font-size: 12px; padding: 5px;">Total TVA 20%</th>
            <td style="text-align: right; font-size: 12px; padding: 5px;"><p id="Tva"></p></td>
          </tr>
          <tr>
            <th style="text-align: left; font-size: 12px; padding: 5px;">Total TTC</th>
            <td style="text-align: right; font-size: 12px; padding: 5px;"><p id="Ttc"></p></td>
          </tr>
          <tr>
            <th style="text-align: left; font-size: 12px; padding: 5px;">NET A PAYER</th>
            <td style="text-align: right; font-size: 12px; padding: 5px;"><p id="NetTtc"></p></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div> <!-- END ROW -->
</div> <!-- END CONTAINER_FLUID -->
<script>
var ttc = Number("<%= data.Ttc %>");
var tva = Number("<%= data.Tva %>");
var Nht = Number("<%= data.Netht %>");
var remise =Number("<%= data.remise %>");
var Mht = Number("<%= data.Montantht %>");
var Puht = Number("<%= data.Puht %>");
var SMht = Number('<%=data.Secure_Montantht %>');
var SPuht = Number('<%= data.Secure_PuHt %>');

var totalht = Mht + SMht;

document.getElementById("NetTtc").innerHTML =ttc.toFixed(2);
document.getElementById("Ttc").innerHTML = ttc.toFixed(2);
document.getElementById("Tva").innerHTML = tva.toFixed(2);
document.getElementById("NetHt").innerHTML = Nht.toFixed(2);

document.getElementById("remiseHt").innerHTML = remise.toFixed(2);
document.getElementById("TotalHt").innerHTML = totalht.toFixed(2);
document.getElementById("Montantht").innerHTML = Mht.toFixed(2);
document.getElementById("PuHt").innerHTML = Puht.toFixed(2);

if ("<%= data.Secure_designation %>" != "") {
document.getElementById("Secure_Montanthtvar").innerHTML = SMht.toFixed(2);
document.getElementById("Secure_PuHtvar").innerHTML = SPuht.toFixed(2);
}
</script>
</body>
